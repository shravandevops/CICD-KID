pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('YOUR_SONARQUBE_SERVER') {
                    sh 'mvn sonar:sonar'
                }
            }
        }
    }
}

